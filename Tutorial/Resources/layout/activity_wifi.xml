<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="20.0dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:text="API/SDK Hoteles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:text="Antes de continuar, configura tu pinpad e ingresa los siguientes valores:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:text="Ingresa la dirección IP:"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="35dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"/>

            <EditText
                android:text="192.168.0.14"
                android:textColor="@android:color/black"
                android:id="@+id/ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:width="35dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:text="Ingresa el puerto:"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="35dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:inputType="number"/>

            <EditText
                android:text="1087"
                android:textColor="@android:color/black"
                android:id="@+id/port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:width="35dp"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/connect"
                android:text="Conectar"
                android:textSize="17dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple"/>



        </LinearLayout>

    </ScrollView>



</LinearLayout>